{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES5",
        "lib": ["ES2020", "DOM"],
        "declaration": true,
        "outDir": "./dist/lib/es6",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "esModuleInterop": true,
        "strictFunctionTypes": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "ts-node": { "esm": true, "experimentalSpecifierResolution": "node" }
}
