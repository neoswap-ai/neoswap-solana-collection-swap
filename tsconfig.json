{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "lib": ["ES2020", "DOM"],
        "declaration": true,
        "outDir": "./dist/lib/es6",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "esModuleInterop": true,
        "strictFunctionTypes": true,
        "skipLibCheck": true
    },
    "ts-node": {
        "esm": false,
        "compilerOptions": {
            "module": "NodeNext"
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.test.ts"]
}
